<% content_for :title, "Notes" %>

<div class="w-full mx-auto my-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-900">Notes</h1>
  </div>
  
  <div data-new-note-form-target="formContainer" class="mb-6 hidden">
    <%= render "form", note: Note.new %>
  </div>

  <% if @notes.any? %>
    <div id="notes" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @notes.each do |note| %>
        <%= render note %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 my-10">Nenhuma nota encontrada.</p>
  <% end %>
</div>

<div class="w-full mx-auto my-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-900">Notes</h1>
    
    <button data-notes-target="deleteButton"
            data-action="click->notes#deleteSelected"
            class="hidden px-4 py-2 bg-red-600 text-white rounded-md font-medium text-sm hover:bg-red-700 transition-colors duration-200">
      Excluir Selecionados
    </button>
    
    <%= button_tag "+", type: "button", data: { action: "new-note-form#toggleForm" }, class: "text-blue-600 hover:text-blue-500 font-bold text-2xl cursor-pointer" %>
  </div>

  </div>