<div id="<%= dom_id note %>"
     data-controller="note"
     class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">

  <div data-note-target="display" data-action="click->note#showForm" class="cursor-pointer">
    <div class="flex justify-between items-start mb-3">
      <h2 class="text-xl font-semibold text-gray-900"><%= note.title %></h2>
      <div class="flex flex-wrap gap-2">
        <%= link_to note, class: "text-gray-500 hover:text-blue-500 transition-colors duration-200" do %>
          <%= heroicon_svg "eye", class: "h-5 w-5" %>
        <% end %>
        <%= button_to note, method: :delete, 
form_class: "inline-block", class: "text-gray-500 hover:text-red-500 
transition-colors duration-200", data: { turbo_confirm: "Are you sure?" } do %>
          <%= heroicon_svg "trash", class: "h-5 w-5" %>
        <% end %>
      </div>
    </div>
    <p class="text-gray-700 whitespace-pre-wrap flex-1"><%= note.content %></p>
    <div class="flex justify-between items-center mt-4 text-xs text-gray-500">
      <% if note.tags.present? %>
        <span class="font-medium">Tags: <%= note.tags %></span>
      <% end %>
      <span><%= time_ago_in_words(note.updated_at) %> atr√°s</span>
    </div>
  </div>

  <div data-note-target="form" class="hidden">
    <%= form_with model: note, class: "space-y-4" do |form| %>
      <div>
        <%= form.text_field :title, class: "w-full text-xl font-semibold border-none focus:ring-0 focus:outline-none placeholder-gray-400" %>
      </div>
      <div>
        <%= form.text_area :content, rows: 5, class: "w-full text-gray-600 border-none focus:ring-0 focus:outline-none" %>
      </div>
      <div class="flex justify-end space-x-2">
        <%= form.submit "Salvar", class: "bg-blue-600 hover:bg-blue-500 text-white font-medium py-2 px-4 rounded-md cursor-pointer" %>
        <button type="button" data-action="click->note#hideForm" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-md">
          Cancelar
        </button>
      </div>
    <% end %>
  </div>
</div>