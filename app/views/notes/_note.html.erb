<div id="<%= dom_id note %>" class="border p-4 rounded-md mb-4 bg-white shadow-sm">
  <h2 class="font-bold text-xl mb-2"><%= note.title %></h2>
  <div class="prose mb-2"><%= note.content %></div>
  <% if note.tags.present? %>
    <p class="text-sm text-gray-500">Tags: <%= note.tags %></p>
  <% end %>
</div>
